{
  "main": "src/_app.ts",
  "scripts": {
    "start": "tsc && node dist/_app.js",
    "test": "vitest --passWithNoTests",
    "dev": "nodemon",
    "lint": "prettier --write ."
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "echo ðŸ’… Lint",
      "prettier --write",
      "echo ðŸ§ª Test",
      "vitest run --passWithNoTests"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.8.4",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vitest": "^0.24.1"
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "insertPragma": false,
    "trailingComma": "none",
